<h1>Posts
  <a href="/feed.atom" class="float-end">
    <span class="fa fa-rss"></span>
  </a>
</h1>

{{# tag }}
<a href="{{ page }}" class="badge bg-primary">{{ value }}</a>
{{/ tag }}

<table class="table table-striped mt-3">
  {{# post }}
  <tr>
    <td>{{ published }}</td>
    <td>
      {{# url }}
      <a href="{{ . }}" target="_blank">{{ title }}</a>
      <span class="fa fa-external-link"></span>
      {{/ url }}
      {{^ url }}
      <a href="{{ page }}">{{ title }}</a>
      {{/ url }}
    </td>
  </tr>
  {{/ post }}
</table>
